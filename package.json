{
  "name": "ep-gql-mcp",
  "version": "1.0.0",
  "description": "MCP server for EliteProspects GraphQL API - enables natural language hockey data queries",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ep-gql-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "generate-schema": "tsx scripts/generate-schema.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "eliteprospects",
    "hockey",
    "graphql",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.1",
    "graphql": "^16.12.0",
    "graphql-request": "^7.3.5"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
